<% if @comment.errors.present? %>
  <!--@commentに対して、エラーがある場合は以下の処理-->
  <%= turbo_stream.replace "new_comment" do %>
    <%= render 'comments/form', comment: @comment, recipe: @recipe %>
      <!--
        id="comment-form"の要素新しいフォームで置き換える(再入力)
        @commentを渡すことにより、入力済みの内容を再表示
      -->
  <% end %>
<% else %>
  <!--エラーがない場合は以下の処理-->
  <%= turbo_stream.prepend "comments" do %>
    <%= render @comment %>
      <!--id="table-comment"の要素をcomments/_commentで追加-->
      <!--.prepend = 配列の先頭から追加する-->
  <% end %>
  <%= turbo_stream.replace "new_comment" do %>
    <%= render 'comments/form', recipe: @recipe, comment: Comment.new %>
      <!--id="new_comment"の要素をcomments/formで置き換える（新しい空のフォームを作成）-->
  <% end %>
<% end %>
<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="text-center">
      <h1 class="text-5xl font-bold"><%= t('users.registrations.new.welcome') %></h1>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <h2 class="card-title justify-center mb-2"><%= t('users.registrations.new.sign_up') %></h2>
        <%= form_with model: @user, local: true, class: "space-y-4" do |f| %>

        <!--Emailフィールド-->
          <div class="form-control">
            <label class="label">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                  <path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
                  <path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
                </svg>
                <span class="label-text"><%= t('users.user_form.email') %></span>
              </div>
            </label>
            <%= f.email_field :email, class: "input input-bordered w-full", placeholder: t('placeholder.email') %>
          </div>

          <!--UserNameフィールド-->
          <div class="form-control">
            <label class="label">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                  <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
                </svg>
                <span class="label-text"><%= t('users.user_form.username') %></span>
              </div>
            </label>
            <%= f.text_field :name, class: "input input-bordered w-full", placeholder: t('placeholder.username') %>
          </div>

          <!--Passwordフィールド-->
          <div class="form-control">
            <label class="label">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                  <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
                </svg>
                <span class="label-text"><%= t('users.user_form.password') %></span>
              </div>
            </label>
            <%= f.password_field :password, class: "input input-bordered w-full", placeholder: t('placeholder.password') %>
          </div>

          <!--avatarフィールド-->
          <div class="form-control mt-4">
            <label class="label">
              <span class="label-text"><%= t('users.user_form.form_avatar') %></span>
            </label>
            <div class="flex items-center space-x-2">
              <%= f.label :avatar, class: "block text-sm font-medium text-gray-700 mb-1"  do %>
                <%= f.file_field :avatar, class: 'file-input file-input-borderd w-full', accept: 'image/*' %>
                <%= f.hidden_field :recipe_image_cache %>
              <% end %>
              <span class="text-sm text-gray-500" id="avatar-file-name"></span>
            </div>
          </div>

          <div class="form-control mt-6">
            <%= f.submit t("users.registrations.new.sign_up"), class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <p><%= t('users.user_form.no_account') %></p>
          <%= link_to t('users.user_form.login_link'), login_path, class: "link link-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

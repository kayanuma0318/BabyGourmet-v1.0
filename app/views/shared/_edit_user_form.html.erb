<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="text-center">
      <h1 class="text-5xl font-bold">Change Profile</h1>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <h2 class="card-title justify-center mb-2"><%= t('users.edit_user_form.title') %></h2>
        <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, class: "space-y-4" do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <!--Emailフィールド-->
          <div class="form-control">
            <label class="label">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                  <path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
                  <path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
                </svg>
                <span class="label-text"><%= t('users.edit_user_form.email') %></span>
              </div>
            </label>
            <%= f.email_field :email, class: "input input-bordered w-full", placeholder: t('placeholder.email') %>
          </div>

          <!--UserNameフィールド-->
          <div class="form-control">
            <label class="label">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                  <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
                </svg>
                <span class="label-text"><%= t('users.edit_user_form.username') %></span>
              </div>
            </label>
            <%= f.text_field :name, class: "input input-bordered w-full", placeholder: t('placeholder.username') %>
          </div>

          <!--新しいパスワードフィールド-->
          <div class="form-control">
            <label class="label">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                  <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
                </svg>
                <span class="label-text"><%= t('users.edit_user_form.new_password') %></span>
              </div>
            </label>
            <%= f.password_field :password, class: "input input-bordered w-full", placeholder: t('placeholder.new_password') %>
          </div>

          <!--パスワード確認フィールド-->
          <div class="form-control">
            <label class="label">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                  <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
                </svg>
                <span class="label-text"><%= t('users.edit_user_form.password_confirmation') %></span>
              </div>
            </label>
            <%= f.password_field :password_confirmation, class: "input input-bordered w-full", placeholder: t('placeholder.password_confirmation') %>
          </div>

          <!--現在のパスワードフィールド-->
          <div class="form-control">
            <label class="label">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                  <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
                </svg>
                <span class="label-text"><%= t('users.edit_user_form.current_password') %></span>
              </div>
            </label>
            <%= f.password_field :current_password, class: "input input-bordered w-full", placeholder: t('placeholder.current_password') %>
          </div>

          <!--avatarフィールド-->
          <!--TODO: 画像投稿フォームを実装-->

          <div class="form-control mt-6">
            <%= f.submit "プロフィール更新", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <p><%= t('users.edit_user_form.delete_profile_description') %></p>
          <%= link_to t('users.edit_user_form.delete_profile'), delete_user_path, class: "link link-error", data: { turbo_method: :delete, turbo_confirm: t('users.edit_user_form.delete_profile_confirm') } %>
        </div>
      </div>
    </div>
  </div>
</div>

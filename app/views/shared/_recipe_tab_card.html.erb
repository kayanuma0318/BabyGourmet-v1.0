<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <%= link_to recipe_path(recipe), data: {turbo_frame: "_top"} do %>
    <div class="relative">
      <% if recipe.recipe_image.url.present? %>
        <%= image_tag recipe.recipe_image.url, class: "w-full h-40 object-cover" %>
      <% else %>
        <%= image_tag 'recipe_no_image.png', class: "w-full h-40 object-cover" %>
      <% end %>
      <div class="absolute bottom-0 left-0 right-0 p-2 bg-gradient-to-t from-black to-transparent">
        <h2 class="text-white text-sm font-bold truncate"><%= recipe.title %></h2>
      </div>
    </div>
  <% end %>
  <div class="p-2">
    <div class="flex items-center justify-between text-gray-700 text-xs">
      <div class="flex items-center space-x-1">
        <%= image_tag 'yummy.png', class: "w-4 h-4" %>
        <span><%= recipe.yummies.count %></span>
      </div>
      <div class="flex items-center space-x-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <span><%= recipe.comments.count %></span>
      </div>
    </div>
  </div>
</div>

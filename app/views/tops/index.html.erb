<%= render 'shared/header' %>

<!-- メインコンテンツ部分 -->
<div class="container mx-auto mt-2 md:mt-4 px-4 flex items-center justify-center min-h-[calc(100vh-12rem)]">
  <div class="flex flex-col items-center gap-4 md:gap-6">
    <div class="grid grid-cols-2 gap-4">
      <!--
        mt-2 md:mt-4: ヘッダーとの間隔を縮小
        min-h-[calc(100vh-12rem)]: 最小の高さを画面の高さからヘッダーの高さを引いた値に設定
        gap-4 md:gap-6: アイテム間の間隔を調整
        grid grid-cols-2: 2列のグリッドレイアウトを作成
      -->

      <!--今日のおかず-->
      <div class="flex flex-col items-center shadow-lg rounded-lg p-4 bg-white border-2 border-gray-200">
        <%= link_to image_tag("cooking.png", class: "w-32 h-32 md:w-36 md:h-36 lg:w-40 lg:h-40 object-cover"), daily_menus_recipes_path %>
        <p class="mt-2 text-center font-semibold text-sm md:text-base"><%= t('tops.daily_menu')%></p>
      </div>

      <!--レシピ一覧-->
      <div class="flex flex-col items-center shadow-lg rounded-lg p-4 bg-white border-2 border-gray-200">
        <%= link_to image_tag("resipe_book.png", class: "w-32 h-32 md:w-36 md:h-36 lg:w-40 lg:h-40 object-cover"), recipes_path %>
        <p class="mt-2 text-center font-semibold text-sm md:text-base"><%= t('tops.recipe_list') %></p>
      </div>

      <!--買い物リスト-->
      <div class="flex flex-col items-center shadow-lg rounded-lg p-4 bg-white border-2 border-gray-200">
        <%= link_to image_tag("buy.png", class: "w-32 h-32 md:w-36 md:h-36 lg:w-40 lg:h-40 object-cover"), "#" %>
        <p class="mt-2 text-center font-semibold text-sm md:text-base"><%= t('tops.buy_list') %><br>(coming soon)</p>
      </div>

      <!--レシピ投稿-->
      <div class="flex flex-col items-center shadow-lg rounded-lg p-4 bg-white border-2 border-gray-200">
        <%= link_to image_tag("resipe_post.png", class: "w-32 h-32 md:w-36 md:h-36 lg:w-40 lg:h-40 object-cover"), new_recipe_path %>
        <p class="mt-2 text-center font-semibold text-sm md:text-base"><%= t('tops.recipe_post') %></p>
      </div>
    </div>
  </div>
</div>

<!--
  shadow-lg: 大きな影をつける
  rounded-lg: 角を丸くする
  object-cover: 画像のアスペクト比を保ちながらコンテナにフィットさせる
  font-semibold: フォントを太めに設定
-->

<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="text-center">
      <h1 class="text-5xl font-bold"><%= t('users.sessions.new.welcome') %></h1>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <h2 class="divider card-title justify-center"><%= t('users.sessions.new.sign_in') %></h2>
        <%= form_with url: login_path, scope: :session, local: true, class: "space-y-4" do |f| %>
          <!--space-y-4 :フォーム内の要素間に垂直方向の余白を追加-->

          <!--Emailフィールド-->
          <div class="form-control">
            <label class="label">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                  <path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
                  <path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
                </svg>
                <span class="label-text"><%= t('users.sessions.new.email') %></span>
              </div>
            </label>
            <%= f.email_field :email, class: "input input-bordered w-full", placeholder: t('placeholder.email') %>
          </div>

          <!--Passwordフィールド-->
          <div class="form-control">
            <label class="label">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                  <path fill-rule="evenodd" d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z" clip-rule="evenodd" />
                </svg>
                <span class="label-text"><%= t('users.sessions.new.password') %></span>
              </div>
            </label>
            <%= f.password_field :password, class: "input input-bordered w-full", placeholder: t('placeholder.password') %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit t('users.sessions.new.sign_in'), class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <!--区切り線-->
        <div class="divider text-sm"><%= t('users.sessions.new.divider') %></div>

        <!--パスワードをお忘れですか？-->
        <div class="space-y-4 text-center">
          <%= link_to new_user_password_path, class: "text-sm text-blue-500 hover:text-blue-700 transition-colors duration-200" do %>
            <%= t('users.sessions.new.password_forgot') %>
          <% end %>

          <!--アカウントをお持ちでない方はこちら-->
          <div class="pt-2">
            <p class="text-sm text-gray-600 mb-2"><%= t('users.sessions.new.no_account') %></p>
            <%= link_to new_user_path, class: "inline-flex items-center gap-1 text-primary hover:text-primary-focus transition-colors duration-200" do %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="h-4 w-4">
                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
              </svg>
              <%= t('users.sessions.new.sign_up') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
